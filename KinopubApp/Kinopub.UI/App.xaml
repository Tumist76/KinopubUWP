<Application
    x:Class="Kinopub.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kinopub.UI"
    RequestedTheme="Dark">

    <Application.Resources>
        <!-- Акриловый стиль -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\AcrylicBrush.xaml" />
                <ResourceDictionary Source="Resources\CustomPlayerControls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="AppAccentColorPrimary">#FF5722</Color>
            <Color x:Key="AppAccentColorDark1">#E64A19</Color>
            <Color x:Key="AppAccentColorLight1">#FFCCBC</Color>

            <Color x:Key="AppAccentColorAltPrimary">#3F51B5</Color>
            <Color x:Key="AppAccentColorAltDark1">#303F9F</Color>
            <Color x:Key="AppAccentColorAltLight1">#C5CAE9</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
