<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kinopub.UI.Resources">

    <DataTemplate x:Key="EpisodeItemTemplate">
        <StackPanel VerticalAlignment="Top" Width="250">
            <Image Source="{Binding Thumbnail}"/>
            <TextBlock Text="{Binding Title}"/>
        </StackPanel>
    </DataTemplate>
    <ItemsPanelTemplate x:Key="EpisodeItemsPanel">
        <ItemsStackPanel Orientation="Horizontal"/>
    </ItemsPanelTemplate>
    <Style x:Key="EpisodeItemContainerStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
    </Style>

</ResourceDictionary>
