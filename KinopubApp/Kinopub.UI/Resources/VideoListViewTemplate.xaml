<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kinopub.UI.Resources">

    <DataTemplate x:Key="VideoItemTemplate">
        <StackPanel VerticalAlignment="Top" Width="150">
            <Image Source="{Binding Posters.MediumUrl}"/>
            <TextBlock Margin="0 5 0 0" Style="{StaticResource BaseTextBlockStyle}" Text="{Binding RussianTitle}"/>
            <TextBlock Text="{Binding OriginalTitle}"/>
        </StackPanel>
    </DataTemplate>
    <ItemsPanelTemplate x:Key="VideoItemsPanel">
        <ItemsStackPanel Orientation="Horizontal"/>
    </ItemsPanelTemplate>
    <Style x:Key="VideoItemContainerStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
    </Style>

</ResourceDictionary>
