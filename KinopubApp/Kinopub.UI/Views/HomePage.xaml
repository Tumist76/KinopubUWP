<Page
    x:Class="Kinopub.UI.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kinopub.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="using:Kinopub.UI.ViewModels"
    xmlns:resources="using:Kinopub.UI"
    xmlns:converters="using:Kinopub.UI.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource SystemChromeLowColor}" 
    >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/VideoListViewTemplate.xaml" />
                <ResourceDictionary Source="../Resources/WatchingListViewTemplate.xaml" />
                <ResourceDictionary Source="../Resources/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="XamlAutoFontFamily"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextTrimming" Value="None"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="LineStackingStrategy" Value="MaxHeight"/>
                <Setter Property="TextLineBounds" Value="Full"/>
            </Style>
            <vms:WatchingVM x:Key="WatchingVmDataContext" />
            <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <Page.DataContext>
        <vms:HomePageVM/>
    </Page.DataContext>
    <StackPanel Margin="20 10 10 10">

        <ListView 
            Grid.Column="1"
            x:Name="WatchingListView"
            ItemContainerStyle="{StaticResource VideoItemContainerStyle}" 
            ItemsPanel="{StaticResource VideoItemsPanel}" 
            Height="Auto"
            Width="Auto"
            DataContext="{StaticResource WatchingVmDataContext}"
            ItemsSource="{Binding WatchingEntities}"
            ScrollViewer.VerticalScrollBarVisibility="Disabled" 
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Enabled"                  
            ScrollViewer.VerticalScrollMode="Disabled" 
            IsItemClickEnabled="True"
            VerticalContentAlignment="Top" FontFamily="Segoe UI">
<ListView.ItemTemplate>
    <DataTemplate>
        <StackPanel VerticalAlignment="Top"
                    Margin="0 0 0 10"
                    Height="300">
            <Grid>
                <Rectangle
                    Fill="Aqua"
                    Height="227"
                    />
                <Image 
                    x:Name="Thumbnail"
                    Source="{Binding Thumbnail}"
                    Height="227"
                />
                <ProgressBar
                    Height="10"
                    IsIndeterminate="False"
                    Value="{Binding CompletionPercent}"
                    MaxWidth="{Binding ElementName=Thumbnail, Path=ActualWidth}"
                    VerticalAlignment="Bottom"
                    />
            </Grid>
            <TextBlock Margin="0 5 0 0" 
                       Style="{StaticResource BaseTextBlockStyle}" 
                       Text="{Binding RussianItemTitle}"
                       MaxWidth="{Binding ElementName=Thumbnail, Path=ActualWidth}"
            />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Text="{Binding Season, 
                                Converter={StaticResource StringFormatConverter}, 
                                ConverterParameter='Сезон \{0\}  |'}"
                                Margin="0 0 6 0"/>
                            <TextBlock
                                Text="{Binding Episode, 
                                Converter={StaticResource StringFormatConverter}, 
                                ConverterParameter='Серия \{0\}'}"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Text="{Binding Duration, 
                                Converter={StaticResource StringFormatConverter}, 
                                ConverterParameter='Длительность \{0\}'}"/>
                            <TextBlock
                                Text="{Binding LastPosition, 
                                Converter={StaticResource StringFormatConverter}, 
                                ConverterParameter='Позиция \{0\}'}"/>
                        </StackPanel>
                    </StackPanel>
    </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock
            Text="Популярные фильмы" 
            Style="{StaticResource SubtitleTextBlockStyle}"
            />

        <RelativePanel>
            <ListView 
                Grid.Column="1"
            x:Name="MovieListView"
            ItemContainerStyle="{StaticResource VideoItemContainerStyle}" 
            ItemsPanel="{StaticResource VideoItemsPanel}" 
            ItemTemplate="{StaticResource WatchingItemTemplate}" 
            Height="Auto"
            Width="Auto"
            ItemsSource="{Binding PopularMovies}"
            ScrollViewer.VerticalScrollBarVisibility="Disabled" 
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Enabled"                  
            ScrollViewer.VerticalScrollMode="Disabled" 
            IsItemClickEnabled="True"
            ItemClick="ListView_ItemClick"
            VerticalContentAlignment="Top" FontFamily="Segoe UI">
            </ListView>
            <Button 
                Width="50"
                Height="50"
                RelativePanel.AlignRightWith="MovieListView"
                RelativePanel.AlignVerticalCenterWith="MovieListView"
                Grid.Column="2"
                Style="{StaticResource CircleButtonStyle}"
                    x:Name="ScrollRight"
                    Content="R"
                    VerticalAlignment="Center"
                    Click="Button_Click"/>
            <Button 
                Width="50"
                Height="50"
                Background="Wheat"
                x:Name="ScrollLeft"
                RelativePanel.AlignLeftWith="MovieListView"
                RelativePanel.AlignVerticalCenterWith="MovieListView"
                Style="{StaticResource CircleButtonStyle}"
                Content="L"
                VerticalAlignment="Center" Click="ScrollLeft_Click"
            />
        </RelativePanel>

        <TextBlock
            Text="Популярные сериалы" 
            Style="{StaticResource SubtitleTextBlockStyle}"
        />

        <ListView 
            ItemContainerStyle="{StaticResource VideoItemContainerStyle}" 
            ItemsPanel="{StaticResource VideoItemsPanel}" 
            ItemTemplate="{StaticResource VideoItemTemplate}" 
            Height="Auto"
            ItemsSource="{Binding PopularTvShows}"
            ScrollViewer.VerticalScrollBarVisibility="Disabled" 
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Enabled"                  
            ScrollViewer.VerticalScrollMode="Disabled" 
            IsItemClickEnabled="True"
            ItemClick="ListView_ItemClick"
            VerticalContentAlignment="Top" FontFamily="Segoe UI">
        </ListView>
    </StackPanel>
</Page>
