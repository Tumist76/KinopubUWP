<Page
    x:Class="Kinopub.UI.Views.MediaPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kinopub.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="using:Kinopub.UI.ViewModels"
    xmlns:styles="using:Kinopub.UI.CustomStyles"
    mc:Ignorable="d"

    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <vms:MediaPlayerVM/>
    </Page.DataContext>
    <Grid>
        <TextBlock
            Text="Test"/>
        <Button Content="Глянуть доступные качества"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Click="ButtonBase_OnClick"/>
        <MediaPlayerElement
            x:Name="PlayerElement"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            AreTransportControlsEnabled="True"
        >
            <MediaPlayerElement.TransportControls>
                <styles:CustomMediaTransportControls x:Name="customMTC"
                                                     IsFastForwardButtonVisible="True"
                                                     IsFastForwardEnabled="True"
                                                     IsFastRewindButtonVisible="True"
                                                     IsFastRewindEnabled="True"
                                                     IsPlaybackRateButtonVisible="True"
                                                     IsPlaybackRateEnabled="True"
                                                     IsCompact="False">
                </styles:CustomMediaTransportControls>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
    </Grid>
</Page>
